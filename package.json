{
  "name": "l2c-farm",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start:ci": "serve -s dist -l 3000",
    "start": "vite",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "check-types": "tsc --noEmit",
    "lint": "eslint '{src,cypress}/**/*.{ts,tsx,js,jsx,json,eslintrc,prettierrc}'",
    "test": "jest --passWithNoTests",
    "test:integration": "cypress run",
    "test:integration:ci": "start-server-and-test start:ci 3000 test:integration",
    "prepare": "husky install"
  },
  "dependencies": {
    "@awsui/components-react": "^3.0.863",
    "@awsui/global-styles": "^1.0.19",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.13.0",
    "recoil": "^0.7.7",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@types/lodash": "^4.14.195",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@vitejs/plugin-react": "^3.1.0",
    "cypress": "^12.15.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^28.1.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "serve": "^14.2.0",
    "start-server-and-test": "^1.15.5",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.3.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md,eslintrc,prettierrc,html}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
